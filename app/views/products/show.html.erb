<h1>Look at our beautiful product</h1>
<h3><%=@product.name%></h3>
 <%=@product.description%>
 <%=@product.price_in_dollars%>

<%=link_to("Edit", "/products/#{params[:id]}/edit") %>
<%=link_to("Delete", "/products/#{@product.id}", method: :delete, data: {confirm: "This is a beautiful peace of jewelery. Are you sure you want to let it go?"})%>

<h2>Reviews</h2>
<ul>
  <% @product.reviews.all.each do |review| %>
  <li>
    <p>
     On <%= review.created_at %>,
   </p>
   <p><%= review.review %></p>
   <%end%>
 </li>
 </ul>

 <h4>New Review</h4>

  <%= form_for([@product, @review]) do |f| %>
    <% if @review.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h2>

        <ul>
        <% @review.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :review %><br />
      <%= f.text_area :review %>
    </div>
    <div class="actions">
      <%= f.submit %>
       </div>
     <% end %>
